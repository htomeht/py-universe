<locale name="jp" lang="jp" region="JP" variant="乗用漢字" language="日本語" encoding="utf-8" direction="TBRL">
<verbs>
	どうし - 動詞
    <verb sym="GO">		    <g wd="行く"    /></verb>
    <verb sym="ENTER">	    <g wd="入る"    /></verb>  
    <verb sym="GET">        <g wd="取る"    />
							<g wd="得る"    /></verb>

    テストの例の語彙:                        
    <verb sym="HIT">        <g wd="打つ"    /></verb>
    <verb sym="PUT">		<g wd="置く"    /></verb> 
    etc.
</verbs>

<adverbs>
	ふくし - 副詞
	<advb sym="INTENSITY">  <g wd="弱々しく"    val="+0.500"  />
                            <g wd="強く"        val="-0.500"  /></advb>
</adverbs>

<nouns>
	めいし - 名詞    
    <noun sym="BOOK">           <g  wd="本"             /></noun>
    <noun sym="PEN">            <g  wd="ペン"           /></noun>

    テストの例の語彙:
    <noun sym="NAIL">           <g  wd="釘"             /></noun>
    <noun sym="HAMMER">         <g  wd="ハンマー"       /></noun>
    <noun sym="BROOM">          <g  wd="箒"             /></noun>
    <noun sym="BROOM_CLOSET">   <g  wd="箒の物置"       /></noun>
    etc. ...
</nouns>

<adjectives>
	けいようし と けいようどうし - 形容詞 と 形容動詞
    <adje sym="RED">        <g wd="赤い"        /></adje>
    <adje sym="BLUE">       <g wd="青い"        /></adje>
    etc. ...
</adjectives>

<declensions>
	Declension particles - ぶんぽうのじょし - 文法の助詞
	<decl sym="NOM">        <g wd="は"          />
                            <g wd="が"          /></decl>
	<decl sym="ACC">        <g wd="を"          /></decl>
	<decl sym="DAT">        <g wd="え"          />
                            <g wd="に"          /></decl>
	<decl sym="GEN">	    <g wd="の"          /></decl>
	<decl sym="INS">	    <g wd="で"          /></decl>
</declensions>

<prepositions>
	 【トポロジの】ばしょ の じょし
	 【トポロジの】場所の助詞
	<prep sym="FRONT">      <g wd="の前に"      />
                            <g wd="の前で"      /></prep>
                            
	<prep sym="BACK">       <g wd="の後ろに"    />
                            <g wd="の後ろで"    /></prep>
                            
	<prep sym="ON_TOP">     <g wd="の上に"      />
                            <g wd="の上で"      /></prep>
                            
	<prep sym="UNDER">      <g wd="の下に"      />
                            <g wd="の下で"      /></prep>
                            
	<prep sym="TO_LEFT">    <g wd="の左に"      />
                            <g wd="の左で"      /></prep>
                            
	<prep sym="TO_RIGHT">   <g wd="の右に"      />
                            <g wd="の右で"      /></prep>
                            
	<prep sym="INSIDE">     <g wd="の中に"      />
                            <g wd="の中で"      />
                            <g wd="に"          />
                            <g wd="で"          /></prep>
</prepositions>

<punctuation>
	<punc sym="ADDRESS" chars="、。"/>
	<punc sym="CONJ"    chars="、。"/>
</punctuation>

<conjunctions punctuation="Y">
	<conj sym="CONJ">
            <g wd="し" />
			<g wd="が" />
	</conj>
</conjunctions>
</locale>

